@model SistemaActas.Models.Login
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{<div class="form-horizontal">
        <h1 class="text-primary my-2">Inicio de sesión</h1>
        <hr />
        @Html.ValidationSummary(null, new { @class = "text-danger" })
        <div>
            <fieldset>
                <div class="editor-label">
                    Identificación
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Usuario, "", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    Contraseña
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="submit" value="Ingresar" class="btn btn-outline-dark" />
                </div>
            </fieldset>
        </div>
    </div>
}
