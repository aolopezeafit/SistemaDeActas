@model IEnumerable<SistemaActas.ProyectoServices.Proyecto>

@{
    ViewBag.Title = "Proyectos";
}

<div class="form-horizontal">
    <h1 class="text-primary my-2">Proyectos</h1>

    <div class="row my-4">
        @Html.ActionLink("Agregar", "Create")
    </div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>

                <th>Acciones</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>

                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.id_proyecto }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_proyecto })
                </td>
            </tr>
        }

    </table>
</div>
